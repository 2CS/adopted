<zimlet name="ca_uoguelph_ccs_coloredemailsplus" version="1.3" label="Colored Emails Plus" description="Changes colour of email messages (in list view) based on sender email or message tag.">
  <include>coloredemailsplus.js</include>
  <includeCSS>coloredemailsplus.css</includeCSS>
  <handlerObject>ca_uoguelph_ccs_coloredemailsplusHandlerObject</handlerObject>
  <zimletPanelItem label="${msg.panel_label}" icon="coloredemails-panelIcon">
    <toolTipText>${msg.panel_tooltip_text}</toolTipText>
		<dragSource type="ZmConv" />
		<dragSource type="ZmMailMsg" />
  </zimletPanelItem>
  <userProperties>
		<property type="string" name="up_ce_emailColorPreferences" value=""/>
        <property type="string" name="up_ce_defaultColour" value="false"/>
		<property type="string" name="up_ce_useAutoAssociate" value="false"/>
  </userProperties>
</zimlet>
